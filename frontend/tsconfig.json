{
  "compilerOptions": {
    "target": "ES2018",
    "module": "es6",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
